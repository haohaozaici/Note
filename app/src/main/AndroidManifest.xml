<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.hao.Note">

    <application
        android:allowBackup="true"
        android:icon="@drawable/jpg_33"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.hao.Note.CrimeListActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.hao.Note.CrimePagerActivity"
            android:parentActivityName="com.example.hao.Note.CrimeListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden">
        </activity>

        <activity
            android:name=".AboutMe"
            android:parentActivityName="com.example.hao.Note.CrimeListActivity"
            >
        </activity>
    </application>


</manifest>